<section class="module module--page module--collection">
  <div class="container">
     <div class="row">
      <div class="col-dk-8 col-dk-push-2">
      {% for collection in collections %}
            {% if collection.image %}
              <div class="col-tb-4">
                <img src="{{ collection | img_url: 'large' }}" alt="{{ collection.image.alt }}" />
                <h6> {{collection.title}} </h6>
                {{ collection.products_count }} products
              </div>
            {% else %}
              <div class="col-tb-4">
                <img src="{{ collection.products.first | img_url: 'large' }}" alt="{{ collection.title | escape  }}" />
                <h5> {{collection.title}} </h5>
                {{ collection.products_count }} products
            </div>
            {% endif %}
      {% endfor %}
      </div>
    </div>
  </div>
</section>
